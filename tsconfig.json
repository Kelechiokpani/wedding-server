{
  "compilerOptions": {
    "strict": false,
    "rootDirs": [
      "src"
    ],
    "skipLibCheck": true,
    "outDir": "dist",
    "lib": [
      "es2020"
    ],
    "target": "es2020",
    // "module": "commonjs",  
    "module": "Node16",
    "moduleResolution": "node16",
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
     "baseUrl": "./src",
    "paths": {
      "*": ["*", "*.ts"]
    },
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "types": [
      "node"
    ],
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ]
}



